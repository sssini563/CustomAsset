# Docker Environment Configuration
# Copy this file to .env and configure

# Application
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:your_app_key_here
APP_URL=http://localhost:8080
APP_TIMEZONE=Asia/Jakarta
APP_LOCALE=id

# Database
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=snipeit
DB_USERNAME=snipeit
DB_PASSWORD=snipeit_password
DB_PREFIX=null
DB_DUMP_PATH=/usr/bin
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_DRIVER=sync

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDR=noreply@yourdomain.com
MAIL_FROM_NAME="Snipe-IT"

# Storage
PRIVATE_FILESYSTEM_DISK=local
PUBLIC_FILESYSTEM_DISK=public

# Image settings
IMAGE_LIB=gd

# Backup
BACKUP_ENV=true

# Optional: LDAP, SAML, etc (uncomment if needed)
# LDAP_ENABLED=false
# SAML2_ENABLED=false
